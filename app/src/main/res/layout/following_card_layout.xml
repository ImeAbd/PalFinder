<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="#22C080">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#BE12F1"
        android:padding="5dp"
        app:cardBackgroundColor="#22C080">

        <ImageView
            android:id="@+id/person_read_photo_imageView"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/following_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:hint="Following name"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/person_read_photo_imageView"
            app:layout_constraintTop_toTopOf="@+id/person_read_photo_imageView" />

        <TextView
            android:id="@+id/following_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="following age"
            android:inputType="textPersonName"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/following_name"
            app:layout_constraintTop_toBottomOf="@+id/following_name" />

        <TextView
            android:id="@+id/following_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="following city"
            android:inputType="textPersonName"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/following_name"
            app:layout_constraintTop_toBottomOf="@+id/following_age" />

        <TextView
            android:id="@+id/following_phoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="following phone number"
            android:inputType="textPersonName"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/following_name"
            app:layout_constraintTop_toBottomOf="@+id/following_city" />

        <TextView

            android:id="@+id/following_interests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Following interests"
            android:inputType="textPersonName"
            android:singleLine="false"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/following_name"
            app:layout_constraintTop_toBottomOf="@+id/following_phoneNumber" />

        <TextView

            android:id="@+id/following_description"
            android:layout_width="207dp"
            android:layout_height="53dp"
            android:ems="10"
            android:hint="Following description"
            android:inputType="textMultiLine"
            android:lines="3"
            android:singleLine="false"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/following_name"
            app:layout_constraintTop_toBottomOf="@+id/following_interests" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:checked="false"
            android:clickable="true"
            android:focusable="auto"
            android:text="Follow"
            app:layout_constraintStart_toStartOf="@+id/person_read_photo_imageView"
            app:layout_constraintTop_toBottomOf="@+id/person_read_photo_imageView" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>